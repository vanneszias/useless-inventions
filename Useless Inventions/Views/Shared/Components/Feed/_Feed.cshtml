@using Useless_Inventions.Models
@model IEnumerable<Invention>?

<main class="feed-main">
    <div class="p-1 p-md-3" style="max-width: 600px; margin: 0 auto;">
        @if (User.Identity?.IsAuthenticated == true)
        {
            <div class="card mb-4 shadow-sm rounded-4">
                <div class="card-body d-flex">
                    <img src="/images/avatar-placeholder.png" class="rounded-circle me-3" width="48" height="48" alt="User">
                    <form class="flex-grow-1">
                        <textarea class="form-control mb-2" rows="2" placeholder="What's happening?"></textarea>
                        <div class="d-flex justify-content-end">
                            <button type="submit" class="btn btn-primary btn-sm">Post</button>
                        </div>
                    </form>
                </div>
            </div>
        }
        @if (Model != null)
        {
            @foreach (var invention in Model)
            {
                var postModel = new {
                    User = "@" + invention.User?.UserName,
                    Content = invention.Title + ": " + (invention.Description.Length > 150 ? invention.Description.Substring(0, 147) + "..." : invention.Description),
                    Time = invention.CreatedAt.ToString("MMM dd, yyyy"),
                    Likes = invention.Likes?.Count ?? 0,
                    Comments = invention.Comments?.Count ?? 0,
                    ImageUrl = invention.ImageUrl,
                    Id = invention.Id
                };
                <div class="mb-3">
                    @await Html.PartialAsync("Components/Post/_PostCard", postModel)
                </div>
            }
        }
        else
        {
            var posts = new[] {
                new { User = "@InventorJoe", Content = "Introducing the #SelfFoldingSocks! Never bend down again.", Time = "2m", Likes = 12, Comments = 3, Id = 0, ImageUrl = (string?)null },
                new { User = "@GadgetGal", Content = "Why use a normal toothpick when you can have a #BluetoothToothpick?", Time = "10m", Likes = 8, Comments = 1, Id = 1, ImageUrl = (string?)null },
                new { User = "@HomeHacker", Content = "Remote control for your spoon. Because why not? #RemoteControlSpoon", Time = "30m", Likes = 5, Comments = 0, Id = 2, ImageUrl = (string?)null }
            };
            foreach (var post in posts)
            {
                <div class="mb-3">
                    @await Html.PartialAsync("Components/Post/_PostCard", post)
                </div>
            }
        }
    </div>
</main> 