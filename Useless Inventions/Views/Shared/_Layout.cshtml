<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Useless Inventions</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Left Sidebar -->
            <aside class="col-12 col-md-3 col-lg-3 d-none d-md-block px-0 border-end min-vh-100" style="background:var(--background);">
                @await Html.PartialAsync("Components/Sidebar/_SidebarNavigation")
            </aside>

            <!-- Main Feed -->
            <main class="col-12 col-md-6 col-lg-6 px-0" role="main">
                <div class="p-3" style="max-width: 600px; margin: 0 auto;">
                    @RenderBody()
                </div>
            </main>

            <!-- Right Sidebar -->
            <aside class="col-12 col-md-3 col-lg-3 px-0 border-start min-vh-100 d-none d-md-block position-relative" style="background:var(--background);">
                <div class="p-3">
                    @await Html.PartialAsync("Components/Search/_SearchBar")
                    @await Html.PartialAsync("Components/Trends/_TrendsList")
                    @await Html.PartialAsync("Components/Suggestions/_SuggestionsList")
                </div>
            </aside>
        </div>
    </div>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
